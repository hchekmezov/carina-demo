<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Carina Demo Tests - Auto Download" parallel="tests">

    <parameter name="suiteOwner" value="qpsdemo"/>
    <parameter name="jenkinsJobName" value="Auto-Download-Test"/>
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsEnvironments" value="DEMO"/>
    <parameter name="jenkinsEmail" value="demo@qaprosoft.com"/>

    <parameter name="jenkinsRegressionPipeline" value="web_regression, full_regression"/>

    <parameter name="jenkinsRegressionMatrix_full_regression" value="browser: chrome; browser: firefox"/>
    <parameter name="jenkinsJobExecutionOrder" value="1"/>
    <parameter name="jenkinsJobExecutionMode" value="continue"/>
    <parameter name="jenkinsAutoScreenshot" value="true"/>

    <test name="Auto download test">
        <classes>
            <class name="com.qaprosoft.carina.demo.AutoDownloadTest">
                <methods>
                    <include name="downloadArtifactTest"/>
                    <include name="downloadArtifactsTest"/>
                </methods>

            </class>
        </classes>
    </test>

</suite>